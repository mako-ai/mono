{
  "name": "api",
  "version": "1.0.0",
  "description": "Hono API backend for query execution",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm run lint && pnpm exec tsc && copyfiles -u 1 'src/**/*.svg' dist",
    "start": "tsx src/index.ts",
    "sync": "tsx src/sync/cli.ts",
    "worker": "tsx src/worker.ts",
    "worker:dev": "tsx watch src/worker.ts",
    "migrate:workspaces": "tsx src/migrations/migrate-to-workspaces.ts",
    "lint": "eslint . --ext ts --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts --fix"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@openai/agents": "^0.0.5",
    "arctic": "^3.7.0",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express-rate-limit": "^7.5.0",
    "hono": "^4.7.11",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "lucia": "^3.2.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.1",
    "mssql": "^11.0.1",
    "mysql2": "^3.14.1",
    "node-cron": "^3.0.3",
    "openai": "^5.2.0",
    "pg": "^8.16.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "stripe": "^14.25.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/inquirer": "^8.2.11",
    "@types/js-yaml": "^4.0.9",
    "@types/mssql": "^9.1.7",
    "@types/node": "^24.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
