{
  "name": "data-analytics-platform",
  "version": "1.0.0",
  "description": "Analytics platform syncing data from multiple sources like Close.com, Stripe, and databases",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm --filter app run dev\" \"pnpm --filter api run dev\" \"pnpm --filter api run worker:dev\"",
    "build": "pnpm run lint:fix:all && pnpm run app:build && pnpm run api:build && tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "format": "prettier --write \"api/**/*.ts\"",
    "sync": "ts-node api/src/sync/sync.ts",
    "sync:help": "ts-node api/src/sync/sync.ts --help",
    "query": "ts-node sync/query-runner.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:rebuild": "docker compose down && docker compose build && docker compose up -d",
    "docker:clean": "docker compose down -v",
    "app:dev": "pnpm --filter app run dev",
    "app:build": "pnpm --filter app run build",
    "app:preview": "pnpm --filter app run preview",
    "app:lint": "pnpm --filter app run lint",
    "app:lint:fix": "pnpm --filter app run lint:fix",
    "api:dev": "pnpm --filter api run dev",
    "api:build": "pnpm --filter api run build",
    "api:start": "pnpm --filter api run start",
    "api:lint": "pnpm --filter api run lint",
    "api:lint:fix": "pnpm --filter api run lint:fix",
    "lint:all": "pnpm run app:lint && pnpm run api:lint",
    "lint:fix:all": "pnpm run app:lint:fix && pnpm run api:lint:fix",
    "install:all": "pnpm install -r"
  },
  "keywords": [
    "analytics",
    "data-sync",
    "close-crm",
    "stripe",
    "mongodb",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/inquirer": "^8.2.11",
    "@types/node-cron": "^3.0.11",
    "api": "^6.1.3",
    "axios": "^1.6.2",
    "bson": "^6.2.0",
    "commander": "^14.0.0",
    "cron-parser": "^5.3.0",
    "dotenv": "^16.3.1",
    "eslint-plugin-prettier": "^5.4.1",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "mongodb": "^6.3.0",
    "node-cron": "^4.1.1",
    "stripe": "^14.25.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "yaml": "^2.8.0"
  }
}
