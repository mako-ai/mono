{
  "name": "multi-tenant-analytics",
  "version": "1.0.0",
  "description": "Multi-tenant analytics platform syncing data from Close.com, Stripe, and other sources",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:core": "ts-node src/index.ts",
    "dev": "pnpm run mongo:up && concurrently -k \"pnpm --filter api dev\" \"pnpm --filter app dev\"",
    "sync:close:leads": "ts-node src/sync-close.ts leads",
    "sync:close:opportunities": "ts-node src/sync-close.ts opportunities",
    "sync:close:contacts": "ts-node src/sync-close.ts contacts",
    "sync:close:activities": "ts-node src/sync-close.ts activities",
    "sync:close:users": "ts-node src/sync-close.ts users",
    "sync:close:custom-fields": "ts-node src/sync-close.ts custom-fields",
    "sync:close:all": "ts-node src/sync-close.ts all",
    "sync:close": "pnpm run sync:close:all",
    "sync:stripe:subscriptions": "ts-node src/sync-stripe.ts subscriptions",
    "sync:stripe:customers": "ts-node src/sync-stripe.ts customers",
    "sync:stripe:invoices": "ts-node src/sync-stripe.ts invoices",
    "sync:stripe:all": "ts-node src/sync-stripe.ts all",
    "sync:stripe": "pnpm run sync:stripe:all",
    "query": "ts-node src/query-runner.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:status": "docker compose ps",
    "docker:restart": "docker compose down && docker compose up -d && sleep 15",
    "config:validate": "ts-node scripts/config.ts validate",
    "config:list": "ts-node scripts/config.ts list",
    "config:show": "ts-node scripts/config.ts show",
    "migrate:tenants": "node scripts/migrate-tenants-to-database.js",
    "setup": "pnpm install && pnpm run docker:up && echo 'Waiting for MongoDB to start...' && sleep 15",
    "mongo:up": "docker compose up -d mongodb",
    "mongo:down": "docker compose stop mongodb && docker compose rm -f mongodb || true",
    "clean": "find . -name node_modules -type d -prune -exec rm -rf {} + && rm -f **/pnpm-lock.yaml"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "mongodb": "^6.3.0",
    "stripe": "^18.2.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.10.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "close.com",
    "stripe",
    "analytics",
    "mongodb",
    "multi-tenant",
    "crm"
  ],
  "author": "",
  "license": "MIT"
}
