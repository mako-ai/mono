{
  "name": "data-analytics-platform",
  "version": "1.0.0",
  "description": "Analytics platform syncing data from multiple sources like Close.com, Stripe, and databases",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm --filter app run dev\" \"pnpm --filter api run dev\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "sync": "ts-node src/sync.ts",
    "sync:help": "ts-node src/sync.ts",
    "sync:close": "ts-node src/sync-close.ts",
    "sync:stripe": "ts-node src/sync-stripe.ts",
    "config": "ts-node scripts/config.ts",
    "config:validate": "ts-node scripts/config.ts validate",
    "config:list": "ts-node scripts/config.ts list",
    "config:show": "ts-node scripts/config.ts show",
    "query": "ts-node src/query-runner.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:rebuild": "docker compose down && docker compose build && docker compose up -d",
    "docker:clean": "docker compose down -v",
    "mongo:export": "ts-node scripts/export-mongo.ts",
    "mongo:import": "ts-node scripts/import-mongo.ts",
    "mongo:backup": "ts-node scripts/backup-mongo.ts",
    "mongo:restore": "ts-node scripts/restore-mongo.ts",
    "migrate:databases": "ts-node scripts/migrate-databases-to-mongodb.ts",
    "migrate:databases:dry": "ts-node scripts/migrate-databases-to-mongodb.ts --dry-run",
    "generate:types": "ts-node scripts/generate-types.ts",
    "app:dev": "pnpm --filter app run dev",
    "app:build": "pnpm --filter app run build",
    "app:preview": "pnpm --filter app run preview",
    "api:dev": "pnpm --filter api run dev",
    "api:build": "pnpm --filter api run build",
    "api:start": "pnpm --filter api run start",
    "install:all": "pnpm install -r"
  },
  "keywords": [
    "analytics",
    "data-sync",
    "close-crm",
    "stripe",
    "mongodb",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bson": "^6.2.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "mongodb": "^6.3.0",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "yaml": "^2.8.0"
  }
}
